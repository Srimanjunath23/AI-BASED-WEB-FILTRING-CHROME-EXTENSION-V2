
{
  "manifest_version": 3,
  "name": "SafeGuard Content Filter",
  "version": "2.0.0",
  "description": "AI-powered content filtering extension that blocks harmful web content",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "incognito": "split",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["block.html", "block.css", "block-handler.js", "password.js", "storage.js", "utils.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "generated-icon.png",
      "48": "generated-icon.png",
      "128": "generated-icon.png"
    }
  },
  "icons": {
    "16": "generated-icon.png",
    "48": "generated-icon.png",
    "128": "generated-icon.png"
  }
  }

